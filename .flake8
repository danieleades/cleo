[flake8]
max-line-length = 88
ignore = E501, E203, W503
per-file-ignores =
    __init__.py:F401
    tests/ui/test_exception_trace.py:W291
    tests/ui/test_table.py:W291
exclude =
    .git
    __pycache__
    setup.py
    build
    dist
    releases
    .venv
    .tox
    .mypy_cache
    .pytest_cache
    .vscode
    .github
